{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "services": {
    "ai-core-api": {
      "source": {
        "directory": "ai-core"
      },
      "build": {
        "buildCommand": "pip install -r requirements.txt",
        "startCommand": "python -m src.main"
      },
      "healthcheck": {
        "path": "/health",
        "port": 8000
      }
    },
    "ai-core-worker": {
      "source": {
        "directory": "ai-core"
      },
      "build": {
        "buildCommand": "pip install -r requirements.txt",
        "startCommand": "python -m src.workers.continuous_monitor"
      },
      "cron": {
        "schedule": "*/30 * * * *"
      }
    },
    "backend": {
      "source": {
        "directory": "backend"
      },
      "build": {
        "buildCommand": "npm ci && npx prisma generate && npm run build",
        "startCommand": "npm start"
      },
      "healthcheck": {
        "path": "/health",
        "port": 3001
      }
    }
  }
}
